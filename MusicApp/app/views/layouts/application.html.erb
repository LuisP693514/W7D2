<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <%= yield %>
    <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p style="color:#E92900"> <%= error %> </p>
        <% end %>
     <% end %>
     <% if flash[:messages] %>
        <% flash[:messages].each do |message| %>
          <p style="color:#04B2D8"> <%= message %> </p>
        <% end %>
     <% end %>
  </body>
</html>
